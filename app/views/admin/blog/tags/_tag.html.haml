%tr{:id => dom_id(tag)}
  %td.main
    .item-title
      = link_to tag.name, :action => :edit, :id => tag
    .item-meta
      - if tag.is_category?
        Category
      
  %td
    .btn-group
      = link_to 'Edit', {:action => :edit, :id => tag}, :class => 'btn btn-small'
      = link_to 'Delete', {:action => :destroy, :id => tag}, :method => :delete, :confirm => 'Are you sure you want to delete this tag?', :class => 'btn btn-small btn-danger'